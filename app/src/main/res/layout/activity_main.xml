<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:background="#ffffff"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
<ScrollView
    android:layout_width="match_parent"
    android:typeface="sans"
    android:background="#ffffff"
    android:layout_height="wrap_content"
     >

<LinearLayout
    android:id="@+id/ll"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="25px"
    android:paddingRight="25px"
    android:orientation="vertical" >
    <LinearLayout
        android:id="@+id/ll_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/bt_beforedate"
            android:src="@drawable/calendar_prev_arrow"
            android:layout_width="50dp"
            android:layout_height="44dp"
            android:paddingTop="10px"
            android:layout_alignParentLeft="true"
            android:background="#ffffff"
            android:textColor="#000000" />
        <Button
            android:id="@+id/bt_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="19dp"
            android:paddingTop="10px"
            android:layout_toLeftOf="@+id/bt_before"
            android:layout_toRightOf="@+id/bt_after"
            android:layout_gravity="center"
            android:background="#ffffff"
            android:textColor="#000000" />
        <ImageButton
            android:id="@+id/bt_afterdate"
            android:src="@drawable/calendar_next_arrow"
            android:layout_width="50dp"
            android:layout_height="44dp"
            android:paddingTop="10px"
            android:layout_alignParentRight="true"
            android:background="#ffffff"
            android:textColor="#000000" />
    </LinearLayout>
    <Button
        android:id="@+id/bt_start"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#050000ff"
        android:text="복음묵상 시작하기"
        android:paddingLeft="50px"
        android:paddingRight="50px"
        android:textSize="17dp" />
    <Button
        android:id="@+id/bt_end"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#050000ff"
        android:text="복음묵상 멈추기"
        android:paddingLeft="50px"
        android:paddingRight="50px"
        android:textSize="17dp" />

    <Button
        android:id="@+id/bt_network_con"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="22dp"
        android:paddingTop="60px"
        android:paddingBottom="60px"       
        android:background="#ffffff" />

    <TextView
        android:id="@+id/tv_01"       
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="17dp"
        android:lineSpacingExtra="5dip"
        android:paddingBottom="20px"
        android:textColor="#000000" />
    
     <Button
        android:id="@+id/bt_network_con2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="30px"
        android:paddingBottom="30px"
        android:background="#ffffff"
        android:textSize="22dp" />
    
     <TextView
        android:id="@+id/tv_02"
        android:paddingLeft="5px"
        android:paddingRight="5px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lineSpacingExtra="5dip"
        android:textSize="17dp"
        android:textColor="#000000" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="25px"
        android:paddingRight="25px"
        android:orientation="vertical" >
     <EditText
        android:id="@+id/et_comment"
        android:paddingLeft="5px"
        android:paddingRight="5px"
        android:paddingTop="50px"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:lineSpacingExtra="5dip"
        android:textStyle="italic"
        android:textSize="17dp"
        android:hint="오늘 가장 마음이 와닿는 구절은.."
        android:textColor="#2156a5" />
     
     <Button
        android:id="@+id/bt_comment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#050000ff"
        android:text="저장"
        android:paddingLeft="50px"
        android:paddingRight="50px"
        android:textSize="17dp" />
        <Button
            android:id="@+id/bt"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="#ffffff"
            android:text=""
            android:paddingLeft="50px"
            android:paddingRight="50px"
            android:textSize="17dp" />

     </LinearLayout>

</LinearLayout>

</ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto">
        <!-- This could be your fragment container, or something -->
        <FrameLayout
            android:id="@+id/contentContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/bottomBar" />

        <com.roughike.bottombar.BottomBar
            android:id="@+id/bottomBar"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_alignParentBottom="true"
            app:bb_tabXmlResource="@xml/bottombar_tabs" />

    </RelativeLayout>
    </RelativeLayout>