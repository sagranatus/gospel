<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:id="@+id/root"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:id="@+id/ll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <Button
                android:id="@+id/bt_network_con"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/actionbar"
                android:fontFamily="@font/notosans_semibold"
                android:textSize="17dp"
                android:paddingTop="20dp"
                android:paddingBottom="10dp"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:lineSpacingExtra="3dp"
                android:background="#ffffff"
                style="?android:attr/borderlessButtonStyle" />

            <TextView
                android:id="@+id/tv_01"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:fontFamily="@font/notosans_regular"
                android:lineSpacingExtra="5dp"
                android:paddingBottom="5dp"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:textColor="#5e5e5e"
                android:bufferType="spannable"
                android:layout_marginBottom="200dp"
                android:textIsSelectable="true"/>

        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/ll_bottom"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_marginTop="20dp"
            android:paddingBottom="10dp"
            android:layout_above="@+id/bottom_navigation"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:orientation="vertical"
            android:background="#e3edf4">

            <TextView
                android:id="@+id/tv_02"
                android:fontFamily="@font/notosans_regular"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="10dp"
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="5dp"
                android:paddingBottom="10dp"
                android:textSize="14dp"
                android:textColor="#000000" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_comment"
                android:fontFamily="@font/notosans_regular"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="5dp"
                android:textSize="14dp"
                android:textColor="#000000" />
                <EditText
                    android:id="@+id/et_comment"
                    android:fontFamily="@font/notosans_regular"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="5dp"
                    android:textSize="14dp"
                    android:background="@color/white"
                    android:hint="여기에 작성하세요"
                    android:maxLength="48"
                    android:textColor="#000000" />

            <Button
                android:id="@+id/bt_save"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="#16a085"
                android:fontFamily="@font/notosans_bold"
                android:text="저장"
                android:textColor="#ffffff"
                android:textSize="11dp" />
                <Button
                    android:id="@+id/bt_edit"
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="#16a085"
                    android:fontFamily="@font/notosans_bold"
                    android:text="수정"
                    android:textColor="#ffffff"
                    android:textSize="11dp" />
            </LinearLayout>



        </LinearLayout>

        <android.support.design.widget.BottomNavigationView
            android:id="@+id/bottom_navigation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            app:itemBackground="@color/colorPrimary_bottom"
            app:itemIconTint="@drawable/bottom_section_color"
            app:itemTextColor="@drawable/bottom_section_color"
            app:menu="@menu/menu" />

    </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>