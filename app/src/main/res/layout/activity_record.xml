<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:background="#e3edf4"
	android:layout_width="match_parent"
	android:layout_height="match_parent">

	<ScrollView
		android:layout_width="match_parent"
		android:typeface="sans"
		android:layout_height="wrap_content"
		>
		<LinearLayout
			android:id="@+id/ll_first"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical">

			<LinearLayout
				android:id="@+id/calendar1"
				android:layout_width="match_parent"
				android:layout_height="270dp"
				android:orientation="vertical" >
			</LinearLayout>

			<TextView
				android:id="@+id/tv_today"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_margin="5dp"
				android:fontFamily="@font/notosans_regular"
				android:textSize="15dp"
				android:lineSpacingExtra="5dp"
				android:text="그림이 있는 날짜는 복음을 묵상한 멋진 날입니다. 각 그림을 클릭하면 자신의 묵상을 다시 볼 수 있습니다. 특별히 내게 와닿는 말씀이 있다면 되새겨 실천해 봅시다."
				android:gravity="center" />
			<TextView
				android:id="@+id/tv_date"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:textSize="14dp"
				android:paddingTop="10dp"
				android:paddingBottom="10dp"
				android:textColor="@color/white"
				android:fontFamily="@font/notosans_semibold"
				android:background="#80abcd"
				android:gravity="center" />
			<LinearLayout
				android:id="@+id/ll_content"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="vertical">
				<LinearLayout
					android:layout_width="160dp"
					android:layout_height="wrap_content"
					android:layout_gravity="center_horizontal"
					android:orientation="horizontal">
					<ImageView
						android:id="@+id/slide1"
						android:layout_weight="1"
						android:layout_width="48dp"
						android:layout_height="48dp"
						android:src="@drawable/slide1_off"
						android:adjustViewBounds="true"
						style="?android:attr/borderlessButtonStyle"/>
					<ImageView
						android:id="@+id/slide2"
						android:layout_weight="1"
						android:layout_width="48dp"
						android:layout_height="48dp"
						android:src="@drawable/slide2_off"
						android:adjustViewBounds="true"
						style="?android:attr/borderlessButtonStyle"/>
					<ImageView
						android:id="@+id/slide3"
						android:layout_weight="1"
						android:layout_width="48dp"
						android:layout_height="48dp"
						android:src="@drawable/slide3_off"
						android:adjustViewBounds="true"
						style="?android:attr/borderlessButtonStyle"/>
				</LinearLayout>
			<TextView
				android:id="@+id/tv_upper"
				android:paddingLeft="5dp"
				android:paddingRight="5dp"
				android:fontFamily="@font/notosans_semibold"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="5dp"
				android:layout_marginBottom="10dp"
				android:lineSpacingExtra="3dp"
				android:textSize="11dp"
				android:text="그날의 복음 말씀"
				android:gravity="center"
				android:textColor="@color/actionbar" />

			<TextView
				android:id="@+id/tv_oneSentence"
				android:paddingLeft="5dp"
				android:paddingRight="5dp"
				android:fontFamily="@font/notosans_semibold"
				android:layout_width="match_parent"
				android:layout_height="120dp"
				android:lineSpacingExtra="3dp"
				android:textSize="16dp"
				android:gravity="center_horizontal"
				android:layout_marginTop="10dp"
				android:textColor="@color/actionbar" />

			<TextView
				android:id="@+id/tv_comment"
				android:fontFamily="@font/notosans_regular"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginBottom="0dp"
				android:textColor="#000000"
				android:lineSpacingExtra="5dp"
				android:textSize="15dp"
				android:paddingLeft="5dp"
				android:paddingRight="5dp"
				android:bufferType="spannable"
				android:textIsSelectable="true"
				android:gravity="center_horizontal"/>
			<TextView
				android:id="@+id/tv_bg1"
				android:fontFamily="@font/notosans_regular"
				android:textColor="#000000"
				android:paddingLeft="5dp"
				android:paddingRight="5dp"
				android:paddingTop="5dp"
				android:paddingBottom="20dp"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
                android:lineSpacingExtra="5dp"
				android:textSize="15dp"
				android:inputType="textMultiLine"/>

				<Button
					android:id="@+id/bt_edit"
					android:layout_width="80dp"
					android:layout_height="30dp"
					android:layout_gravity="center"
					android:background="#16a085"
					android:fontFamily="@font/notosans_bold"
					android:paddingLeft="20dp"
					android:paddingRight="20dp"
					android:layout_marginBottom="80dp"
					android:layout_marginTop="10dp"
					android:text="수정"
					android:textColor="#ffffff"
					android:textSize="11dp" />

				<Button
					android:id="@+id/bt_gocomment"
					android:visibility="gone"
					android:layout_width="170dp"
					android:layout_height="30dp"
					android:layout_gravity="center"
					android:background="#16a085"
					android:fontFamily="@font/notosans_bold"
					android:paddingLeft="20dp"
					android:paddingRight="20dp"
					android:layout_marginBottom="0dp"
					android:layout_marginTop="20dp"
					android:text="말씀새기기 하러가기"
					android:textColor="#ffffff"
					android:textSize="13dp" />
				<Button
					android:id="@+id/bt_golectio"
					android:visibility="gone"
					android:layout_width="170dp"
					android:layout_height="30dp"
					android:layout_gravity="center"
					android:background="#16a085"
					android:fontFamily="@font/notosans_bold"
					android:paddingLeft="20dp"
					android:paddingRight="20dp"
					android:layout_marginBottom="10dp"
					android:layout_marginTop="20dp"
					android:text="거룩한 독서 하러가기"
					android:textColor="#ffffff"
					android:textSize="13dp" />
				<Button
					android:id="@+id/bt_goweekend"
					android:visibility="gone"
					android:layout_width="170dp"
					android:layout_height="30dp"
					android:layout_gravity="center"
					android:background="#16a085"
					android:fontFamily="@font/notosans_bold"
					android:paddingLeft="20dp"
					android:paddingRight="20dp"
					android:layout_marginBottom="10dp"
					android:layout_marginTop="30dp"
					android:text="주일의 독서 하러가기"
					android:textColor="#ffffff"
					android:textSize="13dp" />
			</LinearLayout>


		</LinearLayout>


	</ScrollView>

	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content">

		<android.support.design.widget.BottomNavigationView
			android:id="@+id/bottom_navigation"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_alignParentBottom="true"
			app:itemBackground="@color/colorPrimary_bottom"
			app:itemIconTint="@drawable/bottom_section_color"
			app:itemTextColor="@drawable/bottom_section_color"
			app:menu="@menu/menu" />

	</RelativeLayout>
</RelativeLayout>