<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#ffffff"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:typeface="sans"
    android:background="#ffffff"
    tools:context="com.yellowpg.gaspel.ThirdActivity" >
    
    <LinearLayout
        android:layout_width="match_parent"
   		android:layout_height="match_parent"
   		android:orientation="vertical" >
        <LinearLayout
            android:id="@+id/ll_step1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:orientation="vertical" >

            <Button
                android:id="@+id/bt_text"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_gravity="left|center_vertical"
                android:background="#e0e0e0"
                android:fontFamily="@font/hansans_normal"
                android:text="글씨크기"
                android:textColor="#7f7f7f"
                android:paddingLeft="10dp"
                android:gravity="left|center_vertical"
                android:textSize="15dp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/bt_normal"
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:background="#16a085"
                    android:fontFamily="@font/hansans_bold"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="20dp"
                    android:textColor="#ffffff"
                    android:textSize="12dp"
                    android:text="일반" />
                <Button
                    android:id="@+id/bt_big"
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:background="#16a085"
                    android:fontFamily="@font/hansans_bold"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="20dp"
                    android:textColor="#ffffff"
                    android:textSize="12dp"
                    android:text="크게" />

            </LinearLayout>
        </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_step2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

	<Button
        android:id="@+id/bt_time"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_gravity="left|center_vertical"
        android:background="#e0e0e0"
        android:fontFamily="@font/hansans_normal"
        android:textColor="#7f7f7f"
        android:paddingLeft="10dp"
        android:gravity="left|center_vertical"
        android:textSize="15dp"
        android:text="알람설정"
        style="?android:attr/borderlessButtonStyle" />
    <TimePicker
        android:id="@+id/timePicker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:layout_centerHorizontal="true"
        android:timePickerMode="spinner" />
    <Button
        android:id="@+id/et_timeset"
        android:gravity="center_horizontal"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:textSize="15dp"
        android:textColor="#5e5e5e"
        android:hint=""/>



     <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
         android:gravity="center_horizontal"
         android:orientation="horizontal" >
    <Button
        android:id="@+id/bt_timeset"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:background="#16a085"
        android:fontFamily="@font/hansans_bold"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:textColor="#ffffff"
        android:textSize="12dp"
        android:text="시간설정" />

     <Button
        android:id="@+id/bt_stop"
         android:layout_width="80dp"
         android:layout_height="30dp"
         android:layout_gravity="center"
         android:background="#16a085"
         android:fontFamily="@font/hansans_bold"
         android:paddingLeft="10dp"
         android:paddingRight="10dp"
         android:layout_marginBottom="20dp"
         android:layout_marginTop="20dp"
         android:layout_marginRight="20dp"
         android:textColor="#ffffff"
         android:textSize="12dp"
        android:text="설정해제" />
</LinearLayout>

    </LinearLayout>

    </LinearLayout>

</ScrollView>

    </RelativeLayout>
