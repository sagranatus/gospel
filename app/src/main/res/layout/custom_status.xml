<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff">
    <Button
        android:id="@+id/bt_thismonth_custom"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_gravity="center_horizontal|center_vertical"
        android:background="#e0e0e0"
        android:fontFamily="@font/notosans_regular"
        android:text="이번달"
        android:textColor="#7f7f7f"
        android:paddingLeft="10dp"
        android:gravity="center_horizontal|center_vertical"
        android:textSize="15dp" />
    <TextView
        android:id="@+id/tv_status_custom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center_horizontal|center_vertical"
        android:textSize="15dp"
        android:fontFamily="@font/notosans_regular"
        android:lineSpacingExtra="5dp"
        android:paddingBottom="5dp"
        android:textColor="#5e5e5e"/>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <ImageView
            android:visibility="gone"
            android:id="@+id/walking1_custom"
            android:src="@drawable/footprint"
            android:layout_width="30dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:layout_height="50dp"
            />
        <ImageView
            android:visibility="gone"
            android:id="@+id/walking2_custom"
            android:layout_toRightOf="@+id/walking1_custom"
            android:src="@drawable/footprint"
            android:layout_marginRight="20dp"
            android:layout_width="30dp"
            android:layout_marginTop="10dp"
            android:layout_height="50dp"
            />
        <ImageView
            android:visibility="gone"
            android:layout_toRightOf="@+id/walking2_custom"
            android:id="@+id/walking3_custom"
            android:src="@drawable/footprint"
            android:layout_marginRight="20dp"
            android:layout_width="30dp"
            android:layout_marginTop="10dp"
            android:layout_height="50dp"
            />
        <ImageView
            android:visibility="gone"
            android:id="@+id/walking4_custom"
            android:layout_toRightOf="@+id/walking3_custom"
            android:src="@drawable/footprint"
            android:layout_marginRight="20dp"
            android:layout_width="30dp"
            android:layout_marginTop="10dp"
            android:layout_height="50dp"
            />
        <ImageView
            android:visibility="gone"
            android:id="@+id/walking5_custom"
            android:layout_toRightOf="@+id/walking4_custom"
            android:src="@drawable/footprint"
            android:layout_marginRight="20dp"
            android:layout_width="30dp"
            android:layout_marginTop="10dp"
            android:layout_height="50dp"
            />
        <ImageView
            android:visibility="gone"
            android:id="@+id/walking6_custom"
            android:layout_toRightOf="@+id/walking5_custom"
            android:src="@drawable/footprint"
            android:layout_marginRight="10dp"
            android:layout_width="30dp"
            android:layout_marginTop="10dp"
            android:layout_height="50dp"
            />

        <ImageView
            android:id="@+id/walking_person_custom"
            android:layout_toRightOf="@+id/walking6_custom"
            android:layout_marginLeft="-10dp"
            android:src="@drawable/walking"
            android:layout_width="40dp"
            android:layout_height="50dp"
            />
        <ImageView
            android:visibility="gone"
            android:layout_toRightOf="@+id/walking_person_custom"
            android:id="@+id/arrive_person_custom"
            android:src="@drawable/arrive"
            android:layout_width="40dp"
            android:layout_height="50dp"
            />
        <ImageView
            android:src="@drawable/church2"
            android:layout_gravity="right"
            android:layout_alignParentRight="true"
            android:layout_width="50dp"
            android:layout_height="50dp"
            />

    </RelativeLayout>

</LinearLayout>
