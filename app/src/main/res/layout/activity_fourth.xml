<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:background="#ffffff"
	android:layout_width="match_parent"
	android:layout_height="match_parent">

	<ScrollView
		android:layout_width="match_parent"
		android:typeface="sans"
		android:background="#ffffff"
		android:layout_height="wrap_content"
		>
		<LinearLayout
			android:id="@+id/ll_first"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:paddingLeft="25px"
			android:paddingRight="25px"
			android:orientation="vertical" >

			<LinearLayout
				android:id="@+id/calendar1"
				android:layout_width="match_parent"
				android:layout_height="285dp"
				android:orientation="vertical" >
			</LinearLayout>

			<TextView
				android:id="@+id/tv_today"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_margin="5dp"
				android:fontFamily="@font/notosans_regular"
				android:textSize="15dp"
				android:lineSpacingExtra="5dp"
				android:text="그림이 있는 날짜는 복음을 묵상한 멋진 날입니다. 각 그림을 클릭하면 자신의 묵상을 다시 볼 수 있습니다. 특별히 내게 와닿는 말씀이 있다면 되새겨 실천해 봅시다."
				android:gravity="center" />
			<TextView
				android:id="@+id/tv_date"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:textSize="13dp"
				android:fontFamily="@font/notosans_regular"
				android:gravity="center" />
			<TextView
				android:id="@+id/tv_comment"
				android:fontFamily="@font/notosans_semibold"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:lineSpacingExtra="3dp"
				android:textSize="16dp"
				android:gravity="center"
				android:textColor="@color/actionbar" />

			<TextView
				android:id="@+id/tv_oneSentence"
				android:fontFamily="@font/notosans_regular"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:textColor="#16a085"
				android:lineSpacingExtra="5dp"
				android:textSize="15dp"
				android:bufferType="spannable"
				android:textIsSelectable="true"
				android:gravity="center"/>

			<TextView
				android:id="@+id/tv_date2"
				android:fontFamily="@font/notosans_regular"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:textSize="13dp"
				android:gravity="center" />
			<TextView
				android:id="@+id/tv_oneSentence2"
				android:fontFamily="@font/notosans_semibold"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:textSize="16dp"
				android:gravity="center"
				android:lineSpacingExtra="3dp"
				android:textColor="@color/actionbar"
				android:maxLines="4"
				android:inputType="textMultiLine" />

			<TextView
				android:id="@+id/tv_bg1"
				android:fontFamily="@font/notosans_regular"
				android:textColor="#16a085"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
                android:lineSpacingExtra="5dp"
				android:textSize="15dp"
				android:inputType="textMultiLine"/>

			<Button
				android:id="@+id/bt"
				android:layout_width="match_parent"
				android:layout_height="100dp"
				android:background="#ffffff"
				android:text=""
				android:paddingLeft="50px"
				android:paddingRight="50px"
				android:textSize="17dp"
				style="?android:attr/borderlessButtonStyle" />


		</LinearLayout>


	</ScrollView>

	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content">

		<android.support.design.widget.BottomNavigationView
			android:id="@+id/bottom_navigation"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_alignParentBottom="true"
			app:itemBackground="@color/colorPrimary_bottom"
			app:itemIconTint="@drawable/bottom_section_color"
			app:itemTextColor="@drawable/bottom_section_color"
			app:menu="@menu/menu" />

	</RelativeLayout>
</RelativeLayout>