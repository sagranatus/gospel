<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:id="@+id/root"
    xmlns:app="http://schemas.android.com/apk/res-auto">

        <LinearLayout
            android:id="@+id/ll_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/img"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/first_img1_2"
                    android:adjustViewBounds="true" />
                <TextView
                    android:id="@+id/bt_today"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:textColor="@color/white"
                    android:fontFamily="@font/notosans_semibold"
                    android:textSize="18dp"
                    android:layout_marginTop="-90dp"
                    android:layout_below="@+id/img"
                    android:paddingBottom="10dp"
                    android:lineSpacingExtra="3dp"
                    android:text="" />

                <TextView
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:textColor="@color/white"
                    android:fontFamily="@font/notosans_semibold"
                    android:textSize="11dp"
                    android:layout_below="@+id/img"
                    android:layout_marginTop="-120dp"
                    android:paddingBottom="11dp"
                    android:lineSpacingExtra="3dp"
                    android:text="오늘의 복음 말씀" />
                <TextView
                    android:id="@+id/date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:paddingRight="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:textColor="@color/actionbar"
                    android:layout_below="@+id/img"
                    android:fontFamily="@font/notosans_semibold"
                    android:textSize="24dp"/>
                <ImageView
                    android:id="@+id/img2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/date"
                    android:adjustViewBounds="true" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:paddingBottom="60dp"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/circle1"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:background="@drawable/first_1_1"
                        android:paddingBottom="15dp"
                        android:layout_marginBottom="20dp"
                        android:textSize="34dp"
                        android:fontFamily="@font/notosans_bold"
                        android:textColor="#fff"
                        style="?android:attr/borderlessButtonStyle" />

                    <Button
                        android:id="@+id/circle2"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:background="@drawable/first_1_2"
                        android:paddingBottom="15dp"
                        android:textSize="34dp"
                        android:fontFamily="@font/notosans_bold"
                        android:layout_marginBottom="20dp"
                        android:textColor="#fff"
                        style="?android:attr/borderlessButtonStyle"/>

                    <Button
                        android:id="@+id/circle3"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:background="@drawable/first_1_3"
                        android:paddingBottom="15dp"
                        android:textSize="34dp"
                        android:fontFamily="@font/notosans_bold"
                        android:layout_marginBottom="20dp"
                        android:textColor="#fff"
                        style="?android:attr/borderlessButtonStyle" />
                </LinearLayout>
            </RelativeLayout>



        </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.BottomNavigationView
            android:id="@+id/bottom_navigation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            app:itemBackground="@color/colorPrimary_bottom"
            app:itemIconTint="@drawable/bottom_section_color"
            app:itemTextColor="@drawable/bottom_section_color"
            app:menu="@menu/menu" />

    </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>
